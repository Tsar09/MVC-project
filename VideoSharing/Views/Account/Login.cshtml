@model VideoSharing.Models.LoginModel

@{
    ViewBag.Title = VideoSharing.Resources.Global.Login;
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.HiddenFor(x => x.EmailConfirmed)
        <div class="editor-label">
            @VideoSharing.Resources.Global.Email
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            @VideoSharing.Resources.Global.Password
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        @Html.ActionLink(VideoSharing.Resources.Global.ForgotPassword,"ForgotPassword")

        <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
